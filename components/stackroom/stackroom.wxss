.jingxuanpage {
  background-color: rgba(0, 0, 0, .8) !important;
  color: #fff !important;
}
.srack-room{
  width: 100vw;
  background-color: #eee;
  border-top: 1px solid #ddd;
}
.up {
  margin-top: 10px;
  padding: 10px;
  background-color: #fff;

}

.books-type{
  width: 100vw;
  display: flex;
  align-items: center;
  margin: auto 0px;
  flex-wrap: wrap;
}

.books-type-item{
  padding: 5px 10px;
  font-size: 12px;
  border-radius: 999px;
  margin-right: 15px;
  box-sizing: border-box;
  margin-bottom: 5px;
}

.type-active{
  border: 1px solid rgb(255, 0,44);
  color:rgb(255, 0,44) ;
}
.books-type-item:last-child{
margin-right: 0;
}

.down{
  margin-top: 10px;
  background-color: #fff;
  padding: 5px 15px;
}

.down-item{
  display: flex;
  margin-top: 8px;
  margin-bottom:15px;
}

.down-item-book-img{
  width: 80px;
  height: 100px;
  border-radius: 8px;
  box-shadow: 1px 2px 6px #ddd;
  margin-right: 12px;
}

.down-item-content{
  width: calc(100% - 90px);
  padding: 10px 0px 5px;
  font-size: 13px;
  color: #999;
}

.down-item-title{
  font-size: 14px;
  font-weight: 600;
  color: #000;
}

.down-item-introduce{
margin: 10px 0px;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
}

.money-type-author{
  display: flex;
  justify-content: space-between;
}