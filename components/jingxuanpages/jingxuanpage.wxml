          </view>
          <view class="recommend-right">
            <view class="recommend-right-book" data-id="{{wanBen[5].id}}" data-img="{{ wanBen[5].cover}}" data-words="{{wanBen[5].extra}}"  bindtap="clickUseFunction">
              <image class="recommend-right-img" src="{{wanBen[5].cover}}"></image>
              <view class="recommend-book-name">{{wanBen[5].title}}</view>
              <view class="recommend-book-introduce">{{wanBen[5].content}}</view>
            </view>
            <view class="recommend-right-book" data-id="{{wanBen[7].id}}" data-img="{{ wanBen[7].cover}}" data-words="{{wanBen[7].extra}}"  bindtap="clickUseFunction">
