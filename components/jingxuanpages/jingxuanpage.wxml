        </view>
        <view class="sell-well-book" data-id="{{wanBen[9].id}}" data-img="{{ wanBen[9].cover}}" data-words="{{wanBen[9].extra}}"  bindtap="clickUseFunction">
          <image class="sell-well-book-img" src="{{wanBen[9].cover}}"></image>
          <view class="sell-well-book-name">{{wanBen[9].title}}</view>
        </view>
        <view class="sell-well-book" data-id="{{wanBen[10].id}}" data-img="{{ wanBen[10].cover}}" data-words="{{wanBen[10].extra}}"  bindtap="clickUseFunction">
          <image class="sell-well-book-img" src="{{wanBen[10].cover}}"></image>
