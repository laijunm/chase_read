.head-bar {
  text-align: center;
  position: sticky;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0px 10px 10px;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
}

.title {
  font-size: 13px;
}


.right-icon {
  position: absolute;
  right: 10px;
  top: 0;
}

.icon {
  width: 14px;
  height: 14px;
  margin-left: 10px;
}

.boolself-main {
  padding: 10px;
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
}

.book {
  width:25%;
  text-align: center;
  margin: 0px 10px 20px;
}

.book-img {
  width: 100%;
  height: 100px;
  border-radius: 6px;
}


.book-name{
  font-size: 13px;

}