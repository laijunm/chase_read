.head-bar {
  text-align: center;
  position: sticky;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0px 10px 10px;
  border-bottom: 1px solid #ddd;
background-color: #fff;
z-index: 10;
}

.title {
  font-size: 13px;
  margin: 0px 5px;
}


.right-icon {
  position: absolute;
  right: 10px;
  top: 0;
}

.icon {
  width: 14px;
  height: 14px;
  margin-left: 10px;
}

.swiper-box {
  height: 120px;
}

.swiper-img {
  width: 100vw;
  height: 120px;
}


.book-city-classify-main {
  background-color: #ddd;
}

.classify-and-recommend {
  padding: 5px 15px;
  background-color: #fff;
}

.book-city-classify {
  display: flex;
  margin-top: 10px;

  justify-content: space-between;
}

.classify-item-img {
  width: 30px;
  height: 50px;
}

.leading-recommend{
    margin-top: 20px;
}

.recommend-title {
  position: relative;
  font-size: 16px;
  font-weight: 600;
  text-align: center;
margin-bottom: 20px;
}

.recommend-box{
  display: flex;
  justify-content: space-between;
}

.recommend-left,.recommend-right{
  width: 44%;
}

.recommend-left-img{
  width: 100%;
  height: 180px;
  background-color: #ddd;
  border-radius: 8px;
}

.recommend-book-name{
  margin: 5px ;
  font-size: 14px;
}

.recommend-book-introduce{
  font-size: 13px;
  color: #999;
  margin-left: 5px;
}

.recommend-right-book{
  width: 100%;
  margin-bottom:10px ;
}

.recommend-right-img{
  width: 100%;
  height: 60px;
  background-color: #ddd;
  border-radius: 8px;

}

.current-eriod-sell-well{
  margin-top:10px ;
  background-color: #fff;
  padding: 10px 15px;
}

.current-icon{
  position: absolute;
width: 20px;
height: 20px;
top: 0;
right: 0;
}

.sell-well-books{
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
}
.sell-well-book{
  margin: 0px 8px 20px;
}
.sell-well-book-img {
  width: 80px;
  height: 100px;
  border-radius: 8px;
}

.sell-well-book-name{
  margin-top: 5px;
  font-size: 14px;
  text-align: center;
}

.city-shuangwen{
margin-top: 10px;
background-color: #fff;
padding: 10px 15px;
}

.city-shuangwen-item{
  display: flex;
  margin-bottom: 20px;
}

.city-shuangwen-item-img{
  width: 80px;
  height: 100px;
  border-radius: 8px;
  background-color: red;
  margin-right: 20px;
  box-shadow: 0px 2px 6px #aaa;
}

.city-shuangwen-item-text{
 padding-top: 15px;
 width: 192px;
}

.city-shuangwen-item-title{
  font-size: 14px;
}

.city-shuangwen-item-introduce{
  font-size: 12px;
  color: #999;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin: 10px 0px;
}

.author-and-popularity{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 11px;
}

.popularity{
  color: rgb(247, 223, 9);
}

.suspense-adventure{
margin-top: 10px;
background-color: #fff;
padding: 10px 15px;
}

.suspense-adventure-box{
  display: flex;
  justify-content: space-between;
  text-align: center;
}

.suspense-adventure-item{
  width: 80px;
}

.suspense-adventure-item-img{
  width: 80px;
  height: 100px;
  background-color: red;
  border-radius: 8px;
  margin-bottom: 10px;
  box-shadow: 0px 2px 6px #aaa;
}

.suspense-adventure-item-name{
  font-size: 14px;
}

.new-book-express{
  margin-top: 10px;
  background-color: #fff;
  padding: 10px 15px;
}

.new-book-express-item{
  display: flex;
  text-align: left;
  margin-bottom: 20px;
}


.new-book-express-img{
width: 80px;
height: 100px;
background-color: red;
border-radius: 8px;
box-shadow: 0px 2px 6px #aaa;
margin-right: 20px;
}

.new-book-express-content{
  padding-top: 15px;
  width: 200px;
}
.new-book-express-name{
  font-size: 14px;
}

.new-book-express-introduce{
  margin: 10px 0px ;
  font-size: 13px;
  color: #999;
}
.author {
color: #999;
}

.ranking-list{
  margin-top: 10px;
  background-color: #fff;
  padding: 10px 15px ;
}

.ranking-list-title{
  display: flex;
  justify-content: space-between;
  font-size: 13px ;
  color: #999;
  margin-bottom: 20px;
}

.ranking-list-title-item{
color: red;
}


.ranking-list-swiper-item{
  width: 80px !important;
}

.ranking-swiper-item-img{
  width: 80px;
  height: 100px;
  border-radius: 8px;
  background-color: red;
}

.ranking-swiper-item-title {
  font-size: 12px;
  text-align: center;
}